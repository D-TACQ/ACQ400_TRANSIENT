#!/bin/sh
# gash implementation


get_state() {
	state=0
	if [ -e /etc/acq400/0/transient_state ]; then
		state=$(cat /etc/acq400/0/transient_state)
	fi
	case $state in
	*)	echo "0 ST_IDLE";;
	1)	echo "1 ST_ARM";;
	2)	echo "2 ST_RUN";;
	esac
}
get_channel_mask() {
	let cmax=$(get.site 0 NCHAN)
	cmask=""
	while [ $cmax -ne 0 ]; do
		cmask="$cmask"1
		let cmax=$cmax-1
	done
	echo $cmask
}
case $1 in
getNumSamples)
	source /dev/shm/transient_settings
	let nsam=$PRE+$POST
	echo ACQ32:getNumSamples=$nsam pre=$PRE post=$POST;;
getChannelMask)
        echo ACQ32:getChannelMask=$(get_channel_mask);;
getState)
	echo ACQ32:$(get_state);;
*)
	echo ACQ32:command not found
esac



