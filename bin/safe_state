#!/bin/sh

strip_stx() {
	echo $1 | sed -e 's/STX=//'
}
# always returns a value even if /dev/shm/state is blank
if [ -z $1  ]; then
    if [ -e /dev/shm/state ]; then
	ST="$(cat /dev/shm/state)"
	if [ "x$ST" != "x" ]; then
	    strip_stx $ST0
	    exit 0
        fi
    fi
 	echo "STX 0 0 0 0 0" | strip_stx
else
    echo > /dev/shm/state "STX $* 0 0 0 0" 
fi
exit 0
	  